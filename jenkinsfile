pipeline {
    agent any

       stages {
            stage('SCM checkout') {
                  steps {
                        git url: 'https://github.com/Mariatta/gh_app_demo.git'
                        }
             }

             stage('archiving artifacts') {
                  steps {
                          archiveArtifacts '**/*'
                        }
              }

              stage('transfer artifacts') {
                    steps {
                          sshPublisher(publishers: [sshPublisherDesc(configName: 'webserver', transfers: [sshTransfer(excludes: '', execCommand: 'sudo apt-get update -y;sudo apt-get upgrade -y;sudo apt-get install python3 -y;python -m pip install -U pip;cd /tmp/tmp;python -m pip install -r requirements.txt', execTimeout: 120000, flatten: true, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '/tmp', remoteDirectorySDF: false, removePrefix: '', sourceFiles: '**/*.html')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: true)])
                          }
              }
       }
}
